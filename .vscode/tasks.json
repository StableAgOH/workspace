{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "cppbuild",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-DLOCAL",
                "-O2",
                "-std=c++20",
                "-Wall",
                "-Wno-unused-result",
                "-ftrapv"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "focus": true,
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
        },
        {
            "label": "Compile for debug",
            "type": "cppbuild",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-DLOCAL",
                "-DDEBUG",
                "-std=c++20",
                "-Wall",
                "-Wno-unused-result",
                "-ftrapv"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
            },
            "problemMatcher": "$gcc",
        }
    ]
}